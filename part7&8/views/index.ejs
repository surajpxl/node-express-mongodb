<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>

</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white ">
            <form action="/create" method="post">
                <input name="title" class="block px-5 py-2 w-full rounded-md  bg-zinc-600" type="text" placeholder="Title goes here.. ">
                <textarea name="details" class="block mt-2 px-5 w-full rounded-md outline-none py-2 bg-zinc-600 resize-none" placeholder="Write your task details here..."></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap p-10">
            <% if(files.length > 0){%>
                <% files.forEach(function(val){ %>
     
                    <div class="task m-w-72 px-3 py-4 rounded-md bg-zinc-600">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full  justify-between item-center mt-3">
                            <a class="text-blue-500 " href="/file/<%= val %>">Read More.</a>
                            <a class="text-green-600 ml-5" href="/edit/<%= val %>">edit filename</a>
                        </div>
                    </div>

                 <% }) %>

           <% } else { %>
            <h3 class="text-green-600">No tasks yet</h3>
            <% } %>
   
            
        </div>
    </div>
</body>
</html>